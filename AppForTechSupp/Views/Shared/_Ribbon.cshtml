    });
    function OnWindowResize(s, e) {
        ribbon.AdjustControl();
    }
    function OnCommandExecuted(s, e) {
        loadNewPage(navigationData[e.item.name], hideLeftPane);
    }
    function OnFileTabClicked(s, e) {
        label.SetText("File Tab");
    }
