@using Microsoft.AspNet.Identity
@model MvcBaseApp.Models.ManageUserViewModel

<p>Ваш логин <strong>@User.Identity.GetUserName()</strong>.</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Форма изменения пароля</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        <label for="OldPassword" class="col-md-2 control-label">Текущий пароль</label>
        @*@Html.LabelFor(m => m.OldPassword, new {@class = "col-md-2 control-label"})*@
        <div class="col-md-10">
            @Html.PasswordFor(m => m.OldPassword, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <label for="NewPassword" class="col-md-2 control-label">Новый пароль</label>
        @*@Html.LabelFor(m => m.NewPassword, new {@class = "col-md-2 control-label"})*@
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <label for="ConfirmPassword" class="col-md-2 control-label">Подтвердите пароль</label>
        @*@Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})*@
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сменить пароль" class="btn btn-default" />
            <input type="submit" onclick="cancelManage()" value="Отменить" class="btn btn-default" />
        </div>
    </div>
}
